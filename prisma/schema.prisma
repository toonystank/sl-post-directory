generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PostOffice {
  id         String            @id @default(cuid())
  name       String
  postalCode String
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  fields     PostOfficeField[]
  users      User[]
  edits      EditRequest[]

  @@index([postalCode])
  @@index([name])
}

model PostOfficeField {
  id           String     @id @default(cuid())
  name         String
  type         String     // TEXT, NUMBER, BOOLEAN
  value        String
  postOfficeId String
  postOffice   PostOffice @relation(fields: [postOfficeId], references: [id], onDelete: Cascade)

  @@index([postOfficeId, name])
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  passwordHash String
  role         String        @default("CONTRIBUTOR")
  postOfficeId String?
  postOffice   PostOffice?   @relation(fields: [postOfficeId], references: [id])
  edits        EditRequest[]
}

model EditRequest {
  id            String     @id @default(cuid())
  postOfficeId  String
  requestedById String
  changes       String     // JSON string
  status        String     @default("PENDING")
  createdAt     DateTime   @default(now())
  
  postOffice    PostOffice @relation(fields: [postOfficeId], references: [id])
  requestedBy   User       @relation(fields: [requestedById], references: [id])
}
